<configuration>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%date{yyyy-MM-dd  HH:mm:ss.SSS} %-6level[%thread] %logger{1} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="slick" level="INFO"/>
    <logger name="slick.ast" level="INFO"/>
    <logger name="slick.compiler" level="INFO"/>
    <logger name="slick.jdbc.JdbcBackend.statement" level="INFO"/>
    <logger name="slick.jdbc.StatementInvoker.result" level="INFO"/>

    <logger name="org.gnat.barbot" level="DEBUG"/>

    <!-- first place to debug-->
    <logger name="akka" level="INFO" />

    <root level="info">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>